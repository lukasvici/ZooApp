<Page x:Class="ZooApp.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZooApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="White">
        <TextBox Style="{StaticResource DefultTextBox}" x:Name="LoginInput" HorizontalAlignment="Center" Margin="0,113,0,0" TextWrapping="Wrap" Tag="Введите логин" VerticalAlignment="Top" Width="120"/>
        <TextBox Style="{StaticResource DefultTextBox}" x:Name="PassInput" HorizontalAlignment="Center" Margin="0,169,0,0" TextWrapping="Wrap" Tag="Введите пароль" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="LoginButton" Content="Войти" HorizontalAlignment="Center" Margin="0,225,0,0" VerticalAlignment="Top" Width="120" Height="30" Click="LoginButton_Click"/>

    </Grid>
</Page>
